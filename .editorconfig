# @see http://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
ij_visual_guides = 120

[*.{htm,html,phtml,svg,xml,xsd}]
ij_continuation_indent_size = 8

[.htaccess]
indent_style = tab

[*.js]
indent_size = 2

[*.{json,webmanifest}]
indent_style = tab

[*.sql]
indent_style = tab

[*.{ts,tsconfig,typoscript}]
indent_size = 2

[*.xlf]
indent_style = tab
ij_continuation_indent_size = 8

[*.{yaml,yml}]
indent_size = 2
